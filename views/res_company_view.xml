<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="is_view_company_form" model="ir.ui.view">
            <field name="name">is_view_company_form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <field name="vat" position="after">
                    <field name="is_num_formation"/>
                </field>
                <notebook position="inside">
                    <page string="Google Calendar" name="google_calendar">
                        <group>
                            <field name="is_google_credentials_json" widget="text"/>
                            <field name="is_google_token_json" widget="text"/>
                        </group>
                        <group string="Calendriers Ã  importer">
                            <field name="is_google_calendar_ids" nolabel="1">
                                <list editable="bottom">
                                    <field name="name" string="Nom du calendrier"/>
                                    <field name="color" widget="color_picker"/>
                                </list>
                            </field>
                        </group>
                        <p class="text-muted">Laissez la liste vide pour importer tous les calendriers.</p>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</odoo>
