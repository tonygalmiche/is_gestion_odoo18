<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vue formulaire -->
    <record id="is_suivi_temps_form_view" model="ir.ui.view">
        <field name="name">is.suivi.temps.form</field>
        <field name="model">is.suivi.temps</field>
        <field name="arch" type="xml">
            <form string="Suivi du temps">
                <sheet>
                    <group>
                        <group>
                            <field name="date_debut"/>
                            <field name="date_fin"/>
                            <field name="duree" widget="float_time"/>
                        </group>
                        <group>
                            <field name="fait"/>
                            <field name="partner_id"/>
                            <field name="temps_facturable" widget="float_time"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Description de l'activit√©..."/>
                    </group>
                    <group>
                        <field name="description_simplifiee" readonly="1"/>
                    </group>
                    <group>
                        <group>
                            <field name="google_event_id" readonly="1" invisible="not google_event_id"/>
                            <field name="google_calendar_id" readonly="1" invisible="not google_calendar_id"/>
                            <field name="google_calendar_name" readonly="1" invisible="not google_calendar_name"/>
                            <field name="google_calendar_url" widget="url" invisible="not google_calendar_url" string="üìÖ Ouvrir dans Google Calendar"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue liste -->
    <record id="is_suivi_temps_list_view" model="ir.ui.view">
        <field name="name">is.suivi.temps.list</field>
        <field name="model">is.suivi.temps</field>
        <field name="arch" type="xml">
            <list string="Suivi du temps">
                <field name="date_debut"/>
                <field name="date_fin"/>
                <field name="fait"/>
                <field name="partner_id"/>
                <field name="description_simplifiee"/>
                <field name="duree" widget="float_time" sum="Total"/>
                <field name="temps_facturable" widget="float_time" sum="Total facturable"/>
                <field name="description" optional="hide"/>
                <field name="google_calendar_id" optional="hide"/>
                <field name="google_calendar_name" optional="hide"/>
                <field name="google_calendar_url" column_invisible="True"/>
                <button name="action_open_google_calendar" type="object" icon="fa-calendar" title="Voir dans Google Calendar" invisible="not google_calendar_url"/>
            </list>
        </field>
    </record>

    <!-- Vue recherche -->
    <record id="is_suivi_temps_search_view" model="ir.ui.view">
        <field name="name">is.suivi.temps.search</field>
        <field name="model">is.suivi.temps</field>
        <field name="arch" type="xml">
            <search string="Recherche Suivi du temps">
                <field name="description"/>
                <field name="description_simplifiee"/>
                <field name="partner_id"/>
                <filter string="Fait" name="fait" domain="[('fait', '=', True)]"/>
                <filter string="√Ä faire" name="a_faire" domain="[('fait', '=', False)]"/>
                <separator/>
                <filter string="Cette semaine"  name="cette_semaine"  domain="[('date_debut', '>=', (context_today() - relativedelta(weekday=0)).strftime('%Y-%m-%d')), ('date_debut', '&lt;', (context_today() + relativedelta(weekday=6, days=1)).strftime('%Y-%m-%d'))]"/>
                <filter string="Ce mois"        name="ce_mois"        domain="[('date_debut', '>=', context_today().strftime('%Y-%m-01')), ('date_debut', '&lt;', (context_today() + relativedelta(months=1)).strftime('%Y-%m-01'))]"/>
                <filter string="Mois pr√©c√©dent" name="mois_precedent" domain="[('date_debut', '>=', (context_today() - relativedelta(months=1)).strftime('%Y-%m-01')), ('date_debut', '&lt;', context_today().strftime('%Y-%m-01'))]"/>
                <separator/>
                <group expand="0" string="Regrouper par">
                    <filter string="Client" name="group_client" context="{'group_by': 'partner_id'}"/>
                    <filter string="Fait" name="group_fait" context="{'group_by': 'fait'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date_debut:day'}"/>
                    <filter string="Mois" name="group_month" context="{'group_by': 'date_debut:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vue pivot -->
    <record id="is_suivi_temps_pivot_view" model="ir.ui.view">
        <field name="name">is.suivi.temps.pivot</field>
        <field name="model">is.suivi.temps</field>
        <field name="arch" type="xml">
            <pivot string="Suivi du temps">
                <field name="partner_id" type="row"/>
                <field name="date_debut" type="col" interval="month"/>
                <field name="duree" type="measure"/>
                <field name="temps_facturable" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Vue graphique -->
    <record id="is_suivi_temps_graph_view" model="ir.ui.view">
        <field name="name">is.suivi.temps.graph</field>
        <field name="model">is.suivi.temps</field>
        <field name="arch" type="xml">
            <graph string="Suivi du temps" type="bar">
                <field name="date_debut" interval="day"/>
                <field name="duree" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Vue calendrier -->
    <record id="is_suivi_temps_calendar_view" model="ir.ui.view">
        <field name="name">is.suivi.temps.calendar</field>
        <field name="model">is.suivi.temps</field>
        <field name="arch" type="xml">
            <calendar string="Suivi du temps" date_start="date_debut" date_stop="date_fin" color="color" mode="month" event_open_popup="true">
                <field name="description_simplifiee"/>
                <field name="partner_id"/>
                <field name="fait"/>
                <field name="google_calendar_name"/>
                <field name="duree" widget="float_time"/>
                <field name="temps_facturable" widget="float_time"/>
            </calendar>
        </field>
    </record>

    <!-- Action -->
    <record id="is_suivi_temps_action" model="ir.actions.act_window">
        <field name="name">Suivi du temps</field>
        <field name="res_model">is.suivi.temps</field>
        <field name="view_mode">list,calendar,form,pivot,graph</field>
        <field name="search_view_id" ref="is_suivi_temps_search_view"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cr√©er un nouveau suivi du temps
            </p>
            <p>
                Enregistrez vos activit√©s et suivez le temps pass√©.
            </p>
        </field>
    </record>

</odoo>
